@model NetSchool.Model.Law
@{
    ViewBag.Title = "LawShow";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LawShowN</title>
    <link href="~/CSS/base.css" rel="stylesheet" />
    <link href="~/CSS/Main/Index.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/js/Main/login.js"></script>
    <script src="~/Scripts/Echarts-2.2.7/echarts-all.js"></script>
    <script src="~/Scripts/js/control/ChartOption.js"></script>
    <link href="~/CSS/Law/LawShow.css" rel="stylesheet" />
    <link href="~/Scripts/kindeditor-4.1.7/themes/default/default.css" rel="stylesheet" />
    <link href="~/Scripts/kindeditor-4.1.7/plugins/code/prettify.css" rel="stylesheet" />
    <script src="~/Scripts/kindeditor-4.1.7/kindeditor-min.js"></script>
    <script src="~/Scripts/kindeditor-4.1.7/lang/zh_CN.js"></script>
    <script src="~/Scripts/kindeditor-4.1.7/plugins/code/code.js"></script>
    <script src="~/Scripts/js/Law/LawShow.js"></script>
</head>
<body>
    <div class="top">
        <div class="top-main">
            <img src="~/Image/bass/121203319471883677.png" class="topLogo" />
        </div>
    </div>
    <div class="menu">
    </div>
    <div class="main">
        <div class="main-div LawOperation">
            <p class="title"><span>法律法规查看</span></p>
            <div class="content">
                <div class="titleBox">
                    <label class="txtTitle">@Html.DisplayFor(model => model.Title)</label><br />
                    <p>
                        <label class="txtAuthor">创建人：<span>@Html.DisplayFor(model => model.Author)</span></label>
                        <label class="txtCreateTime">创建时间：<span>@Html.DisplayFor(model => model.CreateTime).ToString().Split(' ')[0]</span></label>
                    </p>
                </div>
                <textarea id="lawContent" name="lawContent" class="lawContent">@Html.DisplayFor(model => model.Content)</textarea>
            </div>
            <div class="btnDiv">
                <input type="button" class="btn btn-BlueBorder cancelBtn" name="cancelBtn" value="关闭" />
            </div>
        </div>
    </div>
    <div class="footer">
        <p>网校信息管理系统&nbsp;&nbsp;&nbsp;&nbsp;浙ICP备13006852号-1<br />©2015</p>
    </div>
</body>
</html>
