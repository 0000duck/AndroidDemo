@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.Account.Contract;

@model List<EduUser>
@{
    ViewBag.Title = "Index";
}
<div class="portlet box red m10">
    <div class="portlet-title">
        <h4><i class="icon-reorder"></i>用户管理</h4>

        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span4">
            <div>
                <label>
                    <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash"></i> 删除</a>
                </label>
                <a class="btn blue thickbox" title='添加学员' href="@Url.Action("Create")?TB_iframe=true&height=550&width=600"><i class="icon-plus icon-white"></i> 新增</a>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Delete", "Home", FormMethod.Post, new { id = "mainForm" }))
    {
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th style="width: 8px;">
                        <input type="checkbox" id="checkall" class="group-checkable" />
                    </th>
                    <th>
                        编号
                    </th>
                    <th>
                        姓名
                    </th>
                    <th>
                        身份证
                    </th>
                    <th>
                        时间
                    </th>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                        </td>
                        <td>
                            @m.ID
                        </td>
                        <td>
                            @m.nickname
                        </td>
                        <td>
                            @m.idcard
                        </td>
                        <td>
                            @m.CreateTime
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }

</div>
