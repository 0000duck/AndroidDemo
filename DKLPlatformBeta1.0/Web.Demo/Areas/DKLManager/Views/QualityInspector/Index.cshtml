@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model;
@using Web.Common;

@model HYZK.FrameWork.Common.PagedList<ProjectInfo>

@{
    ViewBag.Title = "ProjectLeaderAssessor";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="portlet box red m10">
    <div class="portlet-title">
        <h4><i class="icon-reorder"></i>第三次审核</h4>

        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>
    <div class="portlet-body" style="overFlow-x: scroll; overflow-y:scroll;min-width:900px;">
        @using (Html.BeginForm("Return", "ProjectChargeAssessor", FormMethod.Post, new { id = "mainForm" }))
        {
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>
                            项目编号
                        </th>
                        <th>
                            项目名称
                        </th>
                        <th>
                            公司名称
                        </th>
                        <th>
                            项目类别
                        </th>
                        <th>
                            项目状态
                        </th>
                        <th>
                            项目进度
                        </th>
                        <th>
                            下载文件
                        </th>
                        <th>
                            上传审核文件
                        </th>
                        <th>
                            审核
                        </th>
                        <th>
                            详细进度
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>
                                @m.ProjectNumber
                            </td>
                            <td>
                                @m.ProjectName
                            </td>
                            <td>
                                @m.CompaneName
                            </td>

                            <td>
                                @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumProjectCategory)@m.ProjectCategory)
                            </td>
                            <td>
                                @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumProjectSatus)@m.ProjectStatus)
                            </td>
                            <td>
                                <div class="progress">
                                    <div class="bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a class="btn mini thickbox" href="@Url.Action("DownLoadFiles", "DownLoadFiles", new { id = m.ID })?TB_iframe=true&height=500&width=800">
                                    <i class="icon-edit"></i>
                                    下载文件
                                </a>
                            </td>
                            <td>
                                <a class="btn mini thickbox" href="@Url.Action("UploadFiles", "ProjectChargeAssessor", new { id = m.ID })?TB_iframe=true&height=500&width=800">
                                    <i class="icon-edit"></i>
                                    上传文件
                                </a>
                            </td>
                            <td>
                                <a class="btn mini thickbox" href="@Url.Action("CheckDoc", new { id = m.ID })?TB_iframe=true&height=500&width=800">
                                    <i class="icon-edit"></i>
                                    审核
                                </a>
                            </td>
                            <td>
                                <a class="btn mini thickbox" href="@Url.Action("Course", new { ProjectName = m.ProjectName, SignTime = m.SignTime.ToString() })?TB_iframe=true&height=550&width=900">
                                    <i class="icon-edit"></i>
                                    查看详细进度
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <div class="dataTables_paginate paging_bootstrap pagination">
            @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
        </div>
    </div>

</div>
