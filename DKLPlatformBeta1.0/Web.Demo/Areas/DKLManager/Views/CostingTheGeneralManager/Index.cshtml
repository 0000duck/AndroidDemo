@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model

@model PagedList<Costing>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Delete", "CostingTheGeneralManager", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    销售额
                </th>
                <th>
                    技术成本
                </th>
                <th>
                    推广费
                </th>
                <th>
                    协作费
                </th>
                <th>
                    提成
                </th>
                <th>
                    交通补助
                </th>
                <th>
                    其他费用
                </th>
                <th>
                    样品数量
                </th>
                <th>
                    税金
                </th>
                <th>
                    毛利润
                </th>
                <th>
                    毛利润率
                </th>
                <th>
                    状态
                </th>
                <th>
                    备注
                </th>
                <th>
                    签字
                </th>
                <th>
                    签字日期
                </th>
                <th>
                    提交
                </th>
                <th>
                    详细进度
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                    </td>
                    <td>
                        @m.Sales
                    </td>
                    <td>
                        @m.TechnologyCosts
                    </td>
                    <td>
                        @m.PromotionFee
                    </td>
                    <td>
                        @m.CollaborationFee
                    </td>
                    <td>
                        @m.Commission
                    </td>
                    <td>
                        @m.TrafficSubsidies
                    </td>
                    <td>
                        @m.OtherFees
                    </td>
                    <td>
                        @m.NumBerSum
                    </td>
                    <td>
                        @m.Tax
                    </td>
                    <td>
                        @m.GrossProfit
                    </td>
                    <td>
                        @m.GrossProfitMargin %
                    </td>
                    <td>
                        @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumCostingState)@m.CostingState)
                    </td>
                    <td>
                        @m.Remark
                    </td>
                    <td>
                        @m.Sign
                    </td>
                    <td>
                        @m.SignTime.ToShortDateString()
                    </td>
                    <td>
                        <a class="btn mini thickbox" href="@Url.Action("Submit", new { id = m.ID })?TB_iframe=true&height=650&width=600">
                            <i class="icon-edit"></i>
                            提交
                        </a>
                    </td>
                    <td>
                        <a class="btn mini thickbox" href="@Url.Action("Course", new { ProjectName = m.ProjectName, SignTime = m.SignTime.ToString() })?TB_iframe=true&height=550&width=900">
                            <i class="icon-edit"></i>
                            查看详细进度
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>







