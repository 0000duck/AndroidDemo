@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model
@model List<SampleRegisterTable>
@{
    ViewBag.Title = "UpdateChemical";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="td4">

    </div>
</div>
<div class="row-fluid">
    <div class="span4">
        <div>
            <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i> 删除</a>
            <a class="btn blue thickbox" title='添加化学物品' href="@Url.Action("EditChemical")?TB_iframe=true&height=500&width=600"><i class="icon-plus icon-white"></i> 新增</a>
        </div>
    </div>
</div>
@using (Html.BeginForm("delete", "SampleRegisterTable", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    项目编号
                </th>
                <th>
                    样品编号
                </th>
                <th>
                    采样项目
                </th>
                <th>
                    样品名称
                </th>

                <th>
                    车间
                </th>
                <th>
                    岗位
                </th>
                <th>
                    采样地点
                </th>
                <th>
                    CSTEL
                </th>
                <th>
                    CTWA
                </th>
                <th>
                    CMAC
                </th>
                <th>
                    操作
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var m in Model)
            {
                //if ((EnumSampleStates)m.SampleStates != EnumSampleStates.DoneSample)
                //{
                //    continue;
                //}
            <tr>
                <td>
                    <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                </td>
                <td>
                    @m.ProjectNumber
                </td>
                <td>
                    @m.SampleRegisterNumber
                </td>
                <td>
                    @m.ParameterName
                </td>
                <td>
                    @m.SampleName
                </td>

                <td>@m.WorkShop</td>

                <td>@m.Job</td>

                <td>@m.Location</td>

                <td>@m.CSTEL</td>

                <td>@m.CTWA</td>

                <td>@m.CMAC</td>
                <td>
                    <a class="btn mini purple thickbox" title='编辑信息' href="@Url.Action("EditChemical", new { id = m.ID })?TB_iframe=true&height=450&width=600">
                        <i class="icon-edit"></i>
                        修改数据
                    </a>
                </td>

            </tr>
            }
        </tbody>
    </table>
}


