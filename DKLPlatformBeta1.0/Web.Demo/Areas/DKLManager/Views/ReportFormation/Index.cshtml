@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model
@model PagedList<SampleRegisterTable>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i> 删除</a>
</div>
@using (Html.BeginForm("delete", "AnalyzePerson", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    样品登记号
                </th>
                <th>
                    采样日期
                </th>
                <th>
                    样品状态
                </th>
                <th>
                    样品数量
                </th>
                <th>
                    保存条件
                </th>
                <th>
                    备注
                </th>
                <th>
                    状态
                </th>
                <th>
                    分析人
                </th>
                <th>
                    编辑
                </th>
                <th>
                    参数值
                </th>
                <th>
                    下载文件
                </th>
                <th>
                    上传审核文件
                </th>
                <th>
                    在线阅览
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                    </td>
                    <td>
                        @m.SampleRegisterNumber
                    </td>
                    <td>
                        @m.SamplingDay
                    </td>
                    <td>
                        @m.SampleState
                    </td>
                    <td>
                        @m.SampleNumBer
                    </td>
                    <td>
                        @m.SaveCondition
                    </td>
                    <td>
                        @m.Remark
                    </td>
                    <td>
                        @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumSampleStates)@m.SampleStates)
                    </td>
                    <td>
                        @m.AnalyzePeople
                    </td>
                    <td>
                        <a class="btn mini purple thickbox" title='编辑信息' href="@Url.Action("Check", new { id = m.ID })?TB_iframe=true&height=500&width=800">
                            <i class="icon-edit"></i>
                            填写检测信息并提交
                        </a>
                    </td>
                    <td>
                        @m.ArgumentPrice
                    </td>
                    <td>
                        <a class="btn mini thickbox" href="@Url.Action("DownLoadFiles", "DownLoadFiles", new { id = m.ID })?TB_iframe=true&height=500&width=800">
                            <i class="icon-edit"></i>
                            下载文件
                        </a>
                    </td>
                    <td>
                        <a class="btn mini thickbox" href="@Url.Action("UploadFiles", "ReportFormation", new { id = m.ID })?TB_iframe=true&height=500&width=800">
                            <i class="icon-edit"></i>
                            上传文件
                        </a>
                    </td>
                    <td>
                        <a class="btn mini thickbox" href="@Url.Action("ReadProjectFiles", "DownLoadFiles", new { id = m.ID })?TB_iframe=true&height=500&width=800">
                            <i class="icon-edit"></i>
                            文件预览
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


