@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model

@model PagedList<DeviceModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4><i class="icon-reorder"></i>设备使用</h4>

@using (Html.BeginForm("Delete", "DeviceModel", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    设备名称
                </th>
                <th>
                    检定日期始
                </th>
                <th>
                    检定日期末
                </th>
                <th>
                    设备类型
                </th>
                <th>
                    状态
                </th>
                <th>
                    操作
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                    </td>
                    <td>
                        @m.DeivceName
                    </td>
                    <td>
                        @m.BuyTime
                    </td>
                    <td>
                        @m.CalibrationTime
                    </td>
                    <td>
                        @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumDeviceMold)@m.DeviceMold)
                    </td>
                    <td>
                        @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumCheckState)@m.CheckState)
                    </td>
                    <td>
                        <a class="btn mini purple thickbox" title='编辑角色资料' href="@Url.Action("Edit", new { id = m.ID })?TB_iframe=true&height=450&width=500">
                            <i class="icon-edit"></i>
                            编辑及权限
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>




