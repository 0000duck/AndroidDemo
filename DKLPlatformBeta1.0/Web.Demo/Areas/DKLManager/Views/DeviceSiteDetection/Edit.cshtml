@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Web.Controls
@using HYZK.Account.Contract
@using HYZK.FrameWork.Utility

@model DKLManager.Contract.Model.DeviceModel
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{

<script type="text/javascript">
    $(document).ready(function () {
        $("#BirthDate").datetimepicker(
        {

            timeFormat: "HH:mm:ss",
            dateFormat: "yy-mm-dd",
            changeYear: true,
        });
    });
    $(document).ready(function () {
        $("#CalibrationTime").datetimepicker(
            {
                timeFormat: "HH:mm:ss",
                dateFormat: "yy-mm-dd",
                changeYear: true,
            });
    });
</script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
    <div class="row-fluid">

        <div class="control-group">
            <label class="control-label"><span class="required">*</span>设备名称：</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.DeivceName, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.DeivceName)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">检定日期始</label>
            <div class="controls">
                @Html.TextBox("BuyTime", Model.BuyTime, new { @class = "m-wrap" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">检定日期末</label>
            <div class="controls">
                @Html.TextBox("CalibrationTime", Model.CalibrationTime, new { @class = "m-wrap" })
            </div>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">检定日期末：</label>
        <div class="controls">
            @Html.TextBox("CalibrationTime", Model.CalibrationTime.ToCnDataString(), new { @class = "m-wrap" })
            <span class="help-inline">@Html.ValidationMessageFor(m => m.CalibrationTime)</span>
        </div>
    </div>
</div>
}

