@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Web.Controls
@using HYZK.Account.Contract
@using HYZK.FrameWork.Utility
@using DKLManager.Contract.Model;
@using Web.Common;
@using Web.Demo.Areas.DKLManager.Models;

@model DKLManager.Contract.Model.DeviceModel
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
<style type="text/css">
    .form-refer-1 {
        font-weight: 800;
        font-size: large;
        color: black;
    }

    .form-refer-2 {
        font-weight: 800;
        font-size: 16px;
        margin-top: 10px;
        resize: none;
        height: 20px;
        width: 23%;
        text-align: center;
    }

    .form-refer-3 {
        font-weight: 800;
        font-size: large;
        width: 25%;
        margin-top: 10px;
        margin-left: 10px;
        resize: none;
        text-align: center;
    }
</style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-1.8.2.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-ui.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("~/assets/js/jQuery-Timepicker-Addon/jquery-ui-timepicker-addon.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery.ui.datepicker-zh-CN.js.js")" charset="gb2312"></script>
    <script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-ui-timepicker-zh-CN.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#BuyTime").datetimepicker(
            {
                timeFormat: "HH:mm:ss",
                dateFormat: "yy-mm-dd",
                changeYear: true,
            });
        });
        $(document).ready(function () {
            $("#CalibrationTime").datetimepicker(
                {
                    timeFormat: "HH:mm:ss",
                    dateFormat: "yy-mm-dd",
                    changeYear: true,
                });
        });
    </script>



}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="form-refer-1">
                &nbsp;&nbsp;  状态：@Html.DropDownList("CheckState")
                <div class="form-refer-1">
                    &nbsp;&nbsp;&nbsp;损坏部位

                    @Html.TextAreaFor(m => m.ProjectProblemDescribe, new { @class = "m-wrap small return1" })
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                    <span class="help-inline">@Html.ValidationMessageFor(m => m.ProjectProblemDescribe)</span>
                </div>
                <p>退回请修改时间为维修时间</p>
                <p>设备需要维修请把时间改成相同或检定日期末小于检定日期始</p>
            </div>
           
                <div class="control-group">
                    <label class="control-label">检定日期始</label>
                    <div class="controls">
                        @Html.TextBox("BuyTime", Model.BuyTime, new { @class = "m-wrap" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">检定日期末</label>
                    <div class="controls">
                        @Html.TextBox("CalibrationTime", Model.CalibrationTime, new { @class = "m-wrap" })
                    </div>
                </div>

            </div>

        </div>
}




