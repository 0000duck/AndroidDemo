@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Web.Controls
@using HYZK.Account.Contract
@using HYZK.FrameWork.Utility
@model DKLManager.Contract.Model.SampleProjectGist
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Sampling").datepicker(
                {
                    changeYear: true,
                    changeMonth: true,
                });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#AcceptTime").datepicker(
                {
                    changeYear: true,
                    changeMonth: true,
                });
        });
    </script>

}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label">采样项目：</label>
                <div class="controls">
                    @Html.DropDownListFor(m => m.SampleProject, ViewData["ParameterName"] as SelectList)
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleProject)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">采样依据：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.SampleGist, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleGist)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">仪器名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.ApparatusName, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleGist)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">仪器编号：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.ApparatusNumber, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleGist)</span>
                </div>
            </div>
            </div>
        </div>
}







