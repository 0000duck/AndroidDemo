                        <button type="button" id="btnSub" class="btn-sm" name='id' value='@m.ID'><i class="icon-backward"></i> 提交</button>
                       
                    </td>*@
                    <td>
                        <a class="btn mini purple thickbox" title='编辑信息' href="@Url.Action("Delete", "SampleRegisterTable", new { ids = m.ID })">
                            <i class="icon-edit"></i>
                            删除数据
                        </a>
                    </td>
                </tr>
            }
            }
        </tbody>
    </table>

