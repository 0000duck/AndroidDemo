@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Web.Controls
@using HYZK.Account.Contract
@using HYZK.FrameWork.Utility
@model DKLManager.Contract.Model.SampleRegisterTable
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Sampling").datepicker(
                {
                    changeYear: true,
                    changeMonth: true,
                });
        });
    </script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#AcceptTime").datepicker(
            {
                changeYear: true,
                changeMonth: true,
            });
    });
</script>

}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">

            <div class="control-group">
                <label class="control-label">样品登记号：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.SampleRegisterNumber, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleRegisterNumber)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">项目编号</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.ProjectNumber, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.ProjectNumber)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">采样日期：</label>
                <div class="controls">
                    @Html.TextBox("SamplingDay", Model.SamplingDay.ToCnDataString(), new { @class = "m-wrap" })
                </div>
                </div>
            <div class="control-group">
            <label class="control-label">样品名称：</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.SampleName, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleName)</span>
            </div>
        </div>
            <div class="control-group">
                <label class="control-label">样品状态：</label>
                <div class="controls">
                    @Html.DropDownList("SampleState")
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleState)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">样品数量：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.SampleNumBer, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleNumBer)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">保存条件：</label>
                <div class="controls">
                    @Html.DropDownList("SaveCondition")
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SaveCondition)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">备注：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Remark, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Remark)</span>
                </div>
            </div>
    </div>
  </div>
}







