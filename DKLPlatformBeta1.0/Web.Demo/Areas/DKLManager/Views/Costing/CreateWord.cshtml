@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model;
@using Web.Common;
@using Web.Demo.Areas.DKLManager.Models;

@model DKLManager.Contract.Model.Costing

@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_Layout.EditContractWord.cshtml";

}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>


}
@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        $('#uploader').FileUpload({
            'subfolder': 'dkl',
            'callback': function (msg) {
                //msg.url为图片地址
                var picHtml = '<li class="span2"><a> <img src="' + msg.url + '" alt=""> </a>';
                picHtml += '<div class="actions"> <a title="" class="" href="#"><i class="icon-pencil"></i></a>';
                picHtml += ' </div></li>';
                $("#pictrueContainer").html($("#pictrueContainer").html() + picHtml);
                document.getElementById("pictrueFilePaths").value += msg.url + ",";
            }
        });
    </script>

    <script type="text/javascript">


    </script>
}
@section MainContent{

    <div class="portlet box red m10">
        @using (Html.BeginForm("CreateWord", "Costing", FormMethod.Post, new { id = "mainForm" }))
        {
            <div class="portlet-title">
                <h4><i class="icon-reorder"></i>成本表信息</h4>

                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="control-group1 " style="float:none;">
                    <label class="control-label">成本表类别：</label>
                    <div class="controls" >
                        @Html.DropDownList("Type")

                    </div>
                </div>



            </div>


            <button type="submit" id="submit" class="btn blue"><i class="icon-ok"></i> 生成合同</button>

        }
    </div>
}
