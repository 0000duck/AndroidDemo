@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Web.Controls
@using HYZK.Account.Contract
@using HYZK.FrameWork.Utility
@using Web.Common
@model DKLManager.Contract.Model.DeviceModel
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-1.8.2.min.js")"></script>
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-ui.min.js")"></script>
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/jQuery-Timepicker-Addon/jquery-ui-timepicker-addon.js")"></script>
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery.ui.datepicker-zh-CN.js.js")" charset="gb2312"></script>
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-ui-timepicker-zh-CN.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#BuyTime").datetimepicker(
            {

                timeFormat: "HH:mm:ss",
                dateFormat: "yy-mm-dd",
                changeYear: true,
            });
        });
        $(document).ready(function () {
            $("#CalibrationTime").datetimepicker(
                {
                    timeFormat: "HH:mm:ss",
                    dateFormat: "yy-mm-dd",
                    changeYear: true,
                });
        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>设备名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.DeivceName, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.DeivceName)</span>
                </div>
            </div>
            <div class="control-group ">
                <label class="control-label">设备类别：</label>
                <div class="controls">
                    @Html.DropDownList("DeviceMold")
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.DeviceMold)</span>
                </div>
            </div>



            <div class="control-group">
                <label class="control-label">设备编号：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Number, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Number)</span>
                </div>
            </div>


            <div class="control-group">
                <label class="control-label">型号：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.ModelNum, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.ModelNum)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">生产厂家：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Manufacturer, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Manufacturer)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">技术参数：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.SkillParameter, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SkillParameter)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">检定人：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.DeviceIdentityPerson, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.DeviceIdentityPerson)</span>
                </div>
            </div>
                <div class="control-group">
                    <label class="control-label">单价：</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Price, new { @class = "m-wrap small" })
                        <span class="help-inline">@Html.ValidationMessageFor(m => m.Price)</span>
                    </div>
                </div>
            <div class="control-group">
                <label class="control-label">检定日期始</label>
                <div class="controls">
                    @Html.TextBox("BuyTime", Model.BuyTime, new { @class = "m-wrap" })
                </div>
            </div>
                <div class="control-group">
                    <label class="control-label">检定日期末</label>
                    <div class="controls">
                        @Html.TextBox("CalibrationTime", Model.CalibrationTime, new { @class = "m-wrap" })
                    </div>
                </div>
            <div class="control-group ">
                <label class="control-label">状态：</label>
                <div class="controls">
                    @Html.DropDownList("CheckState")
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.CheckState)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">备注：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Remark, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Remark)</span>
                </div>
            </div>
            </div>
}







