@using DKLManager.Contract.Model;
@using HYZK.FrameWork.Utility;
@using HYZK.FrameWork.Common

@model PagedList<ProjectInfoHistory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .new {
        width: 15%;
    }
</style>
<div class="portlet box red m10">
    <div class="portlet-title">
        <h4><i class="icon-reorder"></i>历史项目</h4>

        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>
    <div class="portlet-body" style="overFlow-x: scroll; overflow-y:scroll;min-width:900px;">
        <div class="span8 offset4">
            @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
            {
                <table class="table table-striped table-hover " id="1">
                <thead>
                    <tr>

                        <th>
                            <span>项目编号：</span>
                            @Html.TextBox("ProjectNumber", null, new { @class = "m-wrap small" })
                        </th>
                        <th>
                            <span>项目负责人：</span>
                            @Html.TextBox("ProjectCheif", null, new { @class = "m-wrap small" })
                        </th>

                        <th>
                            <span>项目类别：</span>
                            @Html.DropDownList("ProjectCategory", "---请选择---")
                        </th>
                        <th>
                            <button type="submit" class="btn">搜索 <i class="icon-search"></i></button>
                        </th>
                   </tr>
                    </table>
                
                
                @*<div class="dataTables_filter">




                    <div>
                        <button type="submit" class="btn" style="margin-left:-45%;">搜索 <i class="icon-search"></i></button>
                        <span>项目编号：</span>
                        @Html.TextBox("ProjectNumber", null, new { @class = "m-wrap small" })
                        <span>项目负责人：</span>
                        @Html.TextBox("ProjectCheif", null, new { @class = "m-wrap small" })
                        <span>项目类别：</span>
                        @Html.DropDownList("ProjectCategory", null, "---请选择---", new { @class = "new" })
                    </div>
                </div>*@
            }

        </div>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>
                        项目编号
                    </th>
                    <th>
                        项目名称
                    </th>
                    <th>
                        公司名称
                    </th>
                    <th>
                        项目负责人
                    </th>
                    <th>
                        项目类别
                    </th>
                    <th>
                        查看进度
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            @m.ProjectNumber
                        </td>
                        <td>
                            @m.ProjectName
                        </td>
                        <td>
                            @m.CompaneName
                        </td>
                        <td>
                            @m.ProjectCheif
                        </td>
                        <td>
                            @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumProjectCategory)@m.ProjectCategory)
                        </td>
                        <td>
                            <a class="btn mini thickbox" href="@Url.Action("Course", new { ProjectName = m.ProjectName, SignTime = m.SignTime.ToString() })?TB_iframe=true&height=550&width=900">
                                <i class="icon-edit"></i>
                                查看详细进度
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


