@using (Html.BeginForm("Delete", "Costing", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    项目名称
                </th>
                <th>
                    项目简介
                </th>
                <th>
                    项目类型
                </th>
                <th>
                    客户区县
                </th>
                <th>
                    联系人
                </th>
                <th>
                    所属乡镇
                </th>
                <th>
                    联系方式
                </th>
                <th>
                    备注
                </th>
                <th>
                    签字
                </th>
                <th>
                    签字日期
                </th>
                <th>
                    状态
                </th>
                <th>
                    详细进度
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                    </td>
                    <td>
                        @m.ProjectName
                    </td>
                    <td>
                        @m.ProjectSynopsis
                    </td>
                    <td>
                       @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumType)@Convert.ToInt32(m.Type))
                    </td>
                    <td>
                        @m.CustomerCounty
                    </td>
                    <td>
                        @m.ContactsPserson
                    </td>
                    <td>
                        @m.Towns
                    </td>
                    <td>
                        @m.Relation
                    </td>
                    <td>
                        @m.Remark
                    </td>
                    <td>
                        @m.Sign
                    </td>
                    <td>
                        @m.SignTime
                    </td>
                    <td>
                        @HYZK.FrameWork.Utility.EnumHelper.GetEnumTitle((EnumCostingState)@m.CostingState)
                    </td>
                    <td>
                        <a class="btn mini thickbox" href="@Url.Action("Course", new { ProjectName = m.ProjectName, SignTime = m.SignTime.ToString() })?TB_iframe=true&height=550&width=900">
                            <i class="icon-edit"></i>
                            查看详细进度
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>





