@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model;
@using Web.Common;
@using Web.Demo.Areas.DKLManager.Models;

@model DeviceOrderingViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .HIDE{
       
       visibility:hidden;
    }
</style>
<div class="p5">
    <label>项目编号：@Model.orderInfo.ProjectNumber</label>
    @*<label>预约时间：@Model.orderInfo.OrderDate</label>*@
</div>
@using (Html.BeginForm("Deletes", "DeviceOrdering", FormMethod.Post, new { id = "mainForm" }))
{
    @Html.TextBox("projectID",null, new { @class = "HIDE" })
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            @*<th style="width: 8px;">
                <input type="checkbox" id="checkall" class="group-checkable" />
            </th>*@
            <th>
                设备名称
            </th>
            <th>
                设备预约时间
            </th>
            <th>
                <span>个数:</span>
            </th>
            <th>
                <span>实际分配个数：</span>
            </th>   
            <th>
                分配
            </th>   
            <th>
                操作
            </th>           
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.orderDetailList)
        {
            if(p!=null)
            { 
            <tr>
                @*<td>
                    <input type="checkbox" class="checkboxes" name='ids' value='@p.ID' />
                </td>*@
                <td>
                    <span>@(p.DeviceName)</span>
                </td>
                <td>
                    <span>@(p.OrderDate.ToShortDateString())</span>
                </td>
                <td>
                    <span>@(p.OrderNumber)</span>
                </td>            
               <td>
                    <span>@(p.RealityOrderNumber)</span>
                </td>
                <td>
                <a class="btn mini purple thickbox" title='编辑信息' href="@Url.Action("Edit", new { id = p.ID })?TB_iframe=true&height=450&width=600">
                    <i class="icon-edit"></i>
                    分配
                </a>
                    </td> 
                    <td>
                    @*<a class="btn mini purple thickbox" title='编辑信息' href="@Url.Action("Edit", new { id = p.ID })?TB_iframe=true&height=450&width=600">
                        <i class="icon-edit"></i>
                        编辑
                    </a>*@ 
                        <button type="submit" id="submit" class="btn-sm" name='id' value='@p.ID'><i class="icon-backward"></i> 删除</button>
               </td>
            </tr>    
            }
        }
                                
        
    </tbody>

</table>
}

