<style>
    #person{
        display:none;
    }
    #leader{
        display:none;
    }
    #type{
        display:none;
    }
    #year{
        display:none;
    }
</style>
<script src="@Url.StaticFile("~/assets/js/jquery-1.8.3.min.js")"></script>
<script>
    $(document).ready(function () {
        function checkvalue() {
            var people = $("#select");
            var begin = $("#begin");
            var end = $("#end");

            if (people.val != "" && begin.val != "") {
                $("#button").attr("disabled", false);
            }
        }
        $("#select").change(function () {
            checkvalue();
            if ($("#select").val() == "检测评价组长") {
                $("#leader").show();
                $("#person").hide();
                $("#type").show();
                $("#year").show();
            }
            else {
                $("#person").show();
                $("#leader").hide();
                $("#type").show();
                $("#year").show();
            }
        });
    });
</script>
