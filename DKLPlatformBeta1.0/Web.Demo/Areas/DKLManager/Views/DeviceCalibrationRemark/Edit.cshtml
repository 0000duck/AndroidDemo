@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Web.Controls
@using HYZK.Account.Contract
@using HYZK.FrameWork.Utility
@using Web.Common;
@model DKLManager.Contract.Model.DeviceCalibrationRemarkModel
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-1.8.2.min.js")"></script>
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-ui.min.js")"></script>
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/jQuery-Timepicker-Addon/jquery-ui-timepicker-addon.js")"></script>
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery.ui.datepicker-zh-CN.js.js")" charset="gb2312"></script>
<script type="text/javascript" src="@Url.StaticFile("~/assets/js/js/jquery-ui-timepicker-zh-CN.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#BirthDate").datetimepicker(
            {

                timeFormat: "HH:mm:ss",
                dateFormat: "yy-mm-dd",
                changeYear: true,
            });
        });
        $(document).ready(function () {
            $("#CalibrationPeriod").datetimepicker(
            {

                timeFormat: "HH:mm:ss",
                dateFormat: "yy-mm-dd",
                changeYear: true,
            });
        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>设备编号：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.DeviceId, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.DeviceId)</span>
                </div>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">设备校准人员：</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.CalibrationPerson, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.CalibrationPerson)</span>
            </div>
        </div>


        <div class="control-group">
            <label class="control-label">校准日期：</label>
            <div class="controls">
                @Html.TextBox("BirthDate", Model.CalibrationTime.ToCnDataString(), new { @class = "m-wrap" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.CalibrationTime)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">检定日期：</label>
            <div class="controls">
                @Html.TextBox("CalibrationDate", Model.CalibrationDate.ToCnDataString(), new { @class = "m-wrap" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.CalibrationDate)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">检定周期：</label>
            <div class="controls">
                @Html.TextBox("CalibrationPeriod", Model.CalibrationPeriod.ToCnDataString(), new { @class = "m-wrap" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.CalibrationPeriod)</span>
            </div>
        </div>
            <div class="control-group">
                <label class="control-label">备注：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Remark, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Remark)</span>
                </div>
            </div>
        </div>
}



