@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model;
@using Web.Common;
@using Web.Demo.Areas.DKLManager.Models;

@model DKLManager.Contract.Model.SampleHistory

@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";

}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $('#uploader').FileUpload({
            'subfolder': 'dkl',
            'callback': function (msg) {
                //msg.url为图片地址
                var picHtml = '<li class="span2"><a> <img src="' + msg.url + '" alt=""> </a>';
                picHtml += '<div class="actions"> <a title="" class="" href="#"><i class="icon-pencil"></i></a>';
                picHtml += ' </div></li>';
                $("#pictrueContainer").html($("#pictrueContainer").html() + picHtml);
                document.getElementById("pictrueFilePaths").value += msg.url + ",";
            }
        });
    </script>
    <script type="text/javascript">
        $("#Sampling").datepicker(
            {
                changeYear: true,
                changeMonth: true,
            });
    </script>

<script type="text/javascript">
    $("#AcceptTime").datepicker(
        {
            changeYear: true,
            changeMonth: true,
        });
</script>

}
@section MainContent{

    <div class="portlet box red m10">
        <div class="portlet-body">
            <div class="control-group">
                <label class="control-label">样品登记号：</label>
                <div class="controls">
                    @Html.DropDownList("SampleRegisterNumber")
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleRegisterNumber)</span>
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">采样日期</label>
            <div class="controls">
                @Html.TextBox("Sampling", Model.SamplingDay, new { @class = "m-wrap" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">样品名称：</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.SampleName, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleName)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">样品状态：</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.SampleState, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleState)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">样品数量：</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.SampleNumBer, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleNumBer)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">保存条件：</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.SaveCondition, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.SaveCondition)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">备注</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Remark, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Remark)</span>
            </div>
        </div>
    </div>
}