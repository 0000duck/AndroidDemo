@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model

@model PagedList<DeviceModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4><i class="icon-reorder"></i>设备表记录</h4>
<div class="row-fluid">
    <div class="span4">
        <div>
            <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i> 删除</a>
            <a class="btn blue thickbox" title='添加设备表记录' href="@Url.Action("Create")?TB_iframe=true&height=350&width=500"><i class="icon-plus icon-white"></i> 新增</a>
            <a class="btn mini purple " title='编辑信息' href="@Url.Action("Create")" target="_blank">
                <i class=" icon-edit">
                </i>
                添加化学数据
            </a>
    </div>
</div>

@using (Html.BeginForm("Delete", "Devise", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    设备名称
                </th>
                <th>
                    自编号
                </th>
                <th>
                    型号
                </th>
                <th>
                    生产厂家
                </th>
                <th>
                    技术参数
                </th>
                <th>
                    购买时间
                </th>
                <th>
                    单价
                </th>
                <th>
                    操作
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                    </td>
                    <td>
                        @m.DeivceName
                    </td>
                    <td>
                        @m.Number
                    </td>
                    <td>
                        @m.ModelNum
                    </td>
                    <td>
                        @m.Manufacturer
                    </td>
                    <td>
                        @m.SkillParameter
                    </td>
                    <td>
                        @m.BuyTime
                    </td>
                    <td>
                        @m.Price
                    </td>
                    <td>
                        <a class="btn mini purple thickbox" title='编辑角色资料' href="@Url.Action("Edit", new { id = m.ID })?TB_iframe=true&height=350&width=500">
                            <i class="icon-edit"></i>
                            编辑及权限
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>



