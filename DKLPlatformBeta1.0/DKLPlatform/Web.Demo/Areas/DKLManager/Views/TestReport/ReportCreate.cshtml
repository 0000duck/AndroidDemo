                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                        <th>

                        </th>

                        <th>

                        </th>

                        <th>

                        </th>
                        <th>

                        </th>
                        <th>

                        </th>

                        <th>
                            操作
                        </th>


                    </tr>
                </thead>
                <tbody>
                    
                    
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                            </td>
                            <td>
                                @m.ProjectName
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <a class="btn mini purple thickbox" title='提交报告' href="@Url.Action("CreateWord", new { projectName = m.ProjectName })">
                                    <i class="icon-edit"></i>
                                    生成报告
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

            <div class="dataTables_paginate paging_bootstrap pagination">
                @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
            </div>
        }
    </div>
</div>
