@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Web.Controls
@using HYZK.Account.Contract
@using HYZK.FrameWork.Utility

@model DKLManager.Contract.Model.TestPhysicalReport
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">

    </script>


    <script type="text/javascript">
        $("#ProjectClosingDate").datepicker(
            {
                changeYear: true,
                changeMonth: true,
            });
    </script>
}
@section MainContent{

    <div class="portlet box red m10">
        <div class="control-group">
            <label class="control-label">项目编号</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.ProjectNumber, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.ProjectNumber)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">检测内容</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.TestContent, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.TestContent)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">样品编号</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.SampleNumber, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.SampleNumber)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">车间</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.WordShop, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.WordShop)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">岗位</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Job, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Job)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">测量地点</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Location, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Location)</span>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">接触时间</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.ContactTime, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.ContactTime)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">噪声强度</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.NoiseIntensity, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.NoiseIntensity)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">测量结果</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.TestResult, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.TestResult)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">LEX,8h/LEX,W</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Lex8hLexw, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Lex8hLexw)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">结果判定</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.ResultVerdict, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.ResultVerdict)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">时间</label>
            <div class="controls">
                @Html.TextBox("ProjectClosingDate", Model.CreateTime, new { @class = "m-wrap" })
            </div>
        </div>
    </div>


}
