@using HYZK.FrameWork.Common
@using HYZK.FrameWork.Utility
@using HYZK.FrameWork.Web.Controls
@using DKLManager.Contract.Model

@model PagedList<DeviceCalibrationRemarkModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4><i class="icon-reorder"></i>设备校准记录</h4>
<div class="row-fluid">
    <div class="span4">
        <div>
            <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i> 删除</a>
            <a class="btn blue thickbox" title='添加设备校准记录' href="@Url.Action("Create")?TB_iframe=true&height=350&width=500"><i class="icon-plus icon-white"></i> 新增</a>
        </div>
    </div>

</div>

@using (Html.BeginForm("Delete", "DeviceCalibrationRemark", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    设备校准表
                </th>
                <th>
                    设备校准人员
                </th>
                <th>
                    设备校准时间
                </th>
                <th>
                    备注
                </th>
                <th>
                    操作
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                    </td>
                    <td>
                        @m.DeviceId
                    </td>
                    <td>
                        @m.CalibrationPerson
                    </td>
                    <td>
                        @m.CalibrationTime
                    </td>
                    <td>
                        @m.Remark
                    </td>
                    <td>
                        <a class="btn mini purple thickbox" title='编辑资料' href="@Url.Action("Edit", new { id = m.ID })?TB_iframe=true&height=350&width=500">
                            <i class="icon-edit"></i>
                            编辑及权限
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model)
</div>





