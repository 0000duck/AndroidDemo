@using DKLManager.Contract.Model;
@using HYZK.FrameWork.Utility;
@using HYZK.FrameWork.Common

@model PagedList<ProjectInfoHistory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="portlet box red m10">
    <div class="portlet-title">
        <h4><i class="icon-reorder"></i>历史项目</h4>

        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="span8 offset4">
            @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
            {
                <div class="dataTables_filter">
                    <div>
                        <label>
                            <button type="submit" class="btn">搜索 <i class="icon-search"></i></button>
                        </label>
                    </div>
                    <div>
                        <label>
                            <span>项目编号：</span>
                            @Html.TextBox("ProjectNumber", null, new { @class = "m-wrap small" })
                        </label>
                    </div>
                    <div>
                        <label>
                            <span>项目负责人：</span>
                            @Html.TextBox("ProjectCheif", null, new { @class = "m-wrap small" })
                        </label>
                    </div>
                </div>
            }

        </div>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>
                        项目编号
                    </th>
                    <th>
                        项目名称
                    </th>
                    <th>
                        公司名称
                    </th>
                    <th>
                        项目负责人
                    </th>
                    <th>
                        项目类别
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            @m.ProjectNumber
                        </td>
                        <td>
                            @m.ProjectName
                        </td>
                        <td>
                            @m.CompaneName
                        </td>
                        <td>
                            @m.ProjectCheif
                        </td>
                        <td>
                            @EnumHelper.GetEnumTitle((EnumProjectCategory)@m.ProjectCategory)
                        </td>
                        <td>
                            <a class="btn mini purple thickbox" title='查看' href="@Url.Action("ViewList", new { pNumber = m.ProjectNumber, id = m.ID })?TB_iframe=true&height=500&width=800">
                                <i class="icon-edit"></i>
                                查看
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


